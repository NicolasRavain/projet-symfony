{% extends "base.html.twig" %}


{% block body %}
    <h1 class="text-center mb-5">Nos produits</h1>
    <div class="row">
    {% for product in products %}
        <div class="col-lg-3">
            <div class="card mt-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p>{{ product.price / 100 }} â‚¬</p>
                    <p>{{ product.description }}</p>
                    <a href="{{ path('product_show', { slug: product.slug }) }}" class="btn btn-secondary btn-sm" class="card-link">Voir</a>
                    <a href="{{ path('product_edit', { id:product.id }) }}" class="btn btn-success btn-sm">Modifier</a>
                    <form action="{{ path('product_delete', {id: product.id}) }}" method="post" class="d-inline">
                        <input type="hidden" name="token" value="{{ csrf_token('delete') }}">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}

{% block sidebar %}{% endblock %}